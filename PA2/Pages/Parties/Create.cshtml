@page
@model PA2.Pages.Parties.CreateModel
@{
    ViewData["Title"] = "Create a Party";
}
<h1>Create a Party</h1>
<form method="post" class="form-container">
    <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" id="description" asp-for="Party.Description" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="eventDate">Event Date:</label>
        <input type="date" id="eventDate" asp-for="Party.EventDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="location">Location:</label>
        <input type="text" id="location" asp-for="Party.Location" class="form-control" />
    </div>

    <div class="form-buttons">
        <button type="submit" class="btn btn-primary">Create</button>
        <a href="/Parties" class="btn btn-secondary">Cancel</a>
    </div>
</form>
