@page "{id:int}"
@model PA2.Pages.Parties.EditModel
@{
    ViewData["Title"] = "Edit Party";
}

<h1>Edit Party</h1>

<form method="post" class="form-group">
    <input type="hidden" asp-for="Party.Id" />

    <div class="mb-3">
        <label class="form-label" for="description">Description:</label>
        <input class="form-control" type="text" asp-for="Party.Description" required />
    </div>
    <div class="mb-3">
        <label class="form-label" for="eventDate">Event Date:</label>
        <input class="form-control" type="date" asp-for="Party.EventDate" required />
    </div>
    <div class="mb-3">
        <label class="form-label" for="location">Location:</label>
        <input class="form-control" type="text" asp-for="Party.Location" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="/Parties" class="btn btn-secondary">Cancel</a>
</form>
